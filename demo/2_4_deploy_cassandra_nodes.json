{
    "kind": "List",
    "apiVersion": "v1beta3",
    "metadata": {},
    "items": [
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1beta3",
            "metadata": {
                "name": "cassandra-node-pv-claim"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "5Gi"
                    }
                }
            }
        },
        {
            "apiVersion": "v1beta3",
            "kind": "DeploymentConfig",
            "metadata": {
                "creationTimestamp": null,
                "name": "cassandra",
                "labels": {
                    "name": "cassandra"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "name": "database"
                },
                "strategy": {
                    "resources": {},
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "name": "database"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "capabilities": {},
                                "env": [
                                    {
                                        "name": "CASSANDRA_SEEDS",
                                        "value": "cassandra-seed-1,cassandra-seed-2"
                                    },
                                    {
                                        "name": "CASSANDRA_CLUSTER_NAME",
                                        "value": "todolist"
                                    }
                                ],
                                "image": "library/cassandra:2.1",
                                "imagePullPolicy": "IfNotPresent",
                                "name": "cassandra",
                                "ports": [
                                    {
                                        "containerPort": 9042,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 9160,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 7000,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 7001,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {},
                                "securityContext": {
                                    "capabilities": {},
                                    "privileged": true
                                },
                                "terminationMessagePath": "/dev/termination-log",
                                "volumeMounts": [
                                    {
                                        "name": "cassandra-seed-1-pv",
                                        "mountPath": "/var/lib/cassandra/data"
                                    }
                                ]
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "serviceAccount": "",
                        "volumes": [
                            {
                                "name": "cassandra-seed-1-pv",
                                "persistentVolumeClaim": {
                                    "claimName": "cassandra-seed-1-pv-claim"
                                }
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ]
            },
            "status": {}
        }

    ]
}
